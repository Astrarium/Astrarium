<Window x:Class="Astrarium.Plugins.Journal.Views.AttachmentDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:c="clr-namespace:Astrarium.Plugins.Journal.Controls"
        mc:Ignorable="d"
        Style="{StaticResource {x:Type Window}}" 
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        Title="Attachment details" 
        MinHeight="300" MinWidth="300"
        Height="600" Width="600">

    <TabControl>
        <TabItem Header="Image">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <ToolBar ToolBarTray.IsLocked="True" Grid.Row="0">
                    <Button Margin="2" Height="24" Width="24" Content="+" ToolTip="Zoom In" />
                    <Button Margin="2" Width="24" Content="-" ToolTip="Zoom Out" />
                    <Button Margin="2" Width="24" Content="1:1" ToolTip="Actual size" />
                    <Button Margin="2" Width="24" Content="Fit" ToolTip="Fit to window" />
                </ToolBar>
                    
                <c:ZoomBorder Grid.Row="1" ClipToBounds="True" Background="Black">
                    <c:MultiformatImage Source="{Binding FilePath}" HorizontalAlignment="Left" VerticalAlignment="Top" />
                </c:ZoomBorder>
            </Grid>
        </TabItem>
        <TabItem Header="Details">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Path " Margin="2" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" />
                <TextBox Text="{Binding FilePath, Mode=OneWay}" ToolTip="{Binding FilePath, Mode=OneWay}" IsReadOnly="True" Grid.Column="1" Grid.Row="0" Margin="2" />

                <TextBlock Margin="2" Text="Title " Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" />
                <TextBox Text="{Binding Title}" Grid.Column="1" Grid.Row="1" Margin="2" />

                <TextBlock Margin="2 8 2 2" Text="Comments" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" />
                <TextBox Text="{Binding Comments}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" Margin="2"
                    TextWrapping="Wrap"
                    Height="Auto"
                    AcceptsReturn="True"
                    AcceptsTab="True"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    VerticalScrollBarVisibility="Visible" />
            </Grid>
        </TabItem>
    </TabControl>
</Window>
